<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Show_Goals_In_Details">

    <ImageView
        android:id="@+id/imageView58"
        android:layout_width="560dp"
        android:layout_height="332dp"
        android:layout_marginBottom="528dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/background_top" />

    <ImageView
        android:id="@+id/imageView71"
        android:layout_width="552dp"
        android:layout_height="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView58"
        app:layout_constraintVertical_bias="0.264"
        app:srcCompat="@drawable/status_background" />

    <ImageView
        android:id="@+id/imageView76"
        android:layout_width="593dp"
        android:layout_height="611dp"
        android:layout_marginTop="184dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.635"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView58"
        app:srcCompat="@drawable/background_bottom" />

    <TextView
        android:id="@+id/Title_Show_Goals_In_Details"
        android:layout_width="333dp"
        android:layout_height="99dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/righteous"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView58"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />

    <TextView
        android:id="@+id/Date_Show_Goals_In_Details"
        android:layout_width="106dp"
        android:layout_height="23dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="TextView"
        android:textColor="#F3E00F"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView58"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title_Show_Goals_In_Details"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/DueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai"
        android:text="Due Date :"
        android:textColor="#FFC400"
        app:layout_constraintBaseline_toBaselineOf="@+id/Date_Show_Goals_In_Details"
        app:layout_constraintEnd_toStartOf="@+id/Date_Show_Goals_In_Details"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/StatusDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bree_serif"
        android:text="Status :"
        android:textColor="#F50057"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView71"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView71"
        app:layout_constraintVertical_bias="0.414" />

    <TextView
        android:id="@+id/Status_Show_Goals_In_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bree_serif"
        android:text="TextView"
        android:textColor="#F50057"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/StatusDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toEndOf="@+id/StatusDesc" />

    <TextView
        android:id="@+id/AmountDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/artifika"
        android:text="Target Amount :"
        android:textColor="#00E676"
        app:layout_constraintBaseline_toBaselineOf="@+id/Amount_Show_Goals_In_Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/CategoryDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/artifika"
        android:text="Category"
        android:textColor="#D500F9"
        app:layout_constraintBaseline_toBaselineOf="@+id/Category_Show_Goals_In_Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Amount_Show_Goals_In_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bree_serif"
        android:text="TextView"
        android:textColor="#00E676"
        app:layout_constraintBottom_toTopOf="@+id/imageView71"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toEndOf="@+id/AmountDesc"
        app:layout_constraintTop_toBottomOf="@+id/imageView58"
        app:layout_constraintVertical_bias="0.323" />

    <TextView
        android:id="@+id/Category_Show_Goals_In_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bree_serif"
        android:text="TextView"
        android:textColor="#D861EC"
        app:layout_constraintBottom_toTopOf="@+id/imageView71"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toEndOf="@+id/CategoryDesc"
        app:layout_constraintTop_toBottomOf="@+id/Amount_Show_Goals_In_Details" />

    <ImageView
        android:id="@+id/Change_Status_Show_Goals_In_Details"
        android:layout_width="235dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView71"
        app:layout_constraintVertical_bias="0.205"
        app:srcCompat="@drawable/change_status_button" />

    <ImageView
        android:id="@+id/imageView79"
        android:layout_width="119dp"
        android:layout_height="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/Change_Status_Show_Goals_In_Details"
        app:layout_constraintEnd_toEndOf="@+id/Change_Status_Show_Goals_In_Details"
        app:layout_constraintStart_toStartOf="@+id/Change_Status_Show_Goals_In_Details"
        app:layout_constraintTop_toTopOf="@+id/Change_Status_Show_Goals_In_Details"
        app:srcCompat="@drawable/change_status" />

    <ImageView
        android:id="@+id/Back_Show_Goals_In_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Change_Status_Show_Goals_In_Details"
        app:layout_constraintVertical_bias="0.497"
        app:srcCompat="@drawable/back_bg" />

    <ImageView
        android:id="@+id/imageView83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/Back_Show_Goals_In_Details"
        app:layout_constraintEnd_toEndOf="@+id/Back_Show_Goals_In_Details"
        app:layout_constraintStart_toStartOf="@+id/Back_Show_Goals_In_Details"
        app:layout_constraintTop_toTopOf="@+id/Back_Show_Goals_In_Details"
        app:srcCompat="@drawable/back_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>